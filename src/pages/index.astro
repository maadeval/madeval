</Layout>

<style>
  .banner {
    width: 100%;
    height: 2rem;
    background-image: url('/logo-to-banner.svg');
  }
  .header {
    position: fixed;
    width: 100%;
    left: 0;
    top: 0;
    background-color: var(--color-slate-50);
    z-index: 1;
  }

  .sub-header {
    display: grid;
    grid-template-columns: 20% 1fr 20%;
    justify-content: space-between;
    align-items: center;
    max-width: var(--screen-lg);
    margin-left: auto;
    margin-right: auto;
    padding: 1rem 4rem;
  }

  .logo-wrapper {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    transition: transform 0.25s ease-in-out;
    cursor: pointer;
    margin: 0;
  }

  .logo-wrapper:hover {
    transform: translateY(-0.125rem);
  }

  .logo-image {
    width: 37px;
    height: 37px;
  }

  .logo-title {
    font-weight: 400;
    font-size: 1.875rem;
    line-height: 2.25rem;
    display: block;
  }

  .navbar {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex: 1;
  }

  .navbar-option {
    padding: 0.5rem;
    outline: none;
    text-decoration: none;
    color: var(--color-text);
    font-size: 1.125rem;
    transition: transform 0.25s ease-in-out;
  }

  .navbar-option:hover {
    transform: translateY(-0.125rem);
  }

  .theme-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 1rem;
    font-size: 1.125rem;
    user-select: none;
  }

  .theme-button {
    position: relative;
  }

  .theme-button::before {
    content: '';
    background-repeat: no-repeat;
    background-image: url('/moon.svg');
    background-size: 1rem;
    background-position: center;
    position: absolute;
    left: 50%;
    top: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: translate(-50%, -50%);
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background-color: var(--color-slate-50);
    border: 1px solid var(--color-slate-200);
  }

  .theme-button:checked::before {
    background-image: url('/soon.svg');
  }

  .main {
    min-height: 100vh;
  }

  .main-landing {
    display: flex;
    max-width: var(--screen-lg);
    margin-left: auto;
    margin-right: auto;
    gap: 6.25rem;
    height: 100vh;
    align-items: center;
    padding-left: 4rem;
    padding-right: 4rem;
  }

  .avatar-wrapper {
    display: inline-flex;
    flex-direction: column;
  }

  .avatar-image {
    width: 403px;
    height: 402px;
  }

  .dialog-wrapper {
    position: absolute;
    display: inline-flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    gap: 0.5rem;
    transform: translateY(-3rem);
  }

  .dialog-message {
    display: inline-block;
    border-radius: 9999px;
    border: 1px solid var(--color-slate-200);
    padding: 0.5rem 1rem;
    background-color: var(--color-slate-50);
  }

  .title {
    font-size: 3rem;
    line-height: 3.25rem;
    font-weight: 400;
    max-width: 28ch;
  }

  .opacity {
    opacity: 0.6;
  }

  .subtitle {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 400;
  }

  .big-text {
    margin-top: 2.5rem;
    font-size: 2.25rem;
    line-height: 2.5rem;
    max-width: 38ch;
  }

  .big-text-variant {
    margin-top: 2rem;
    font-size: 2rem;
    line-height: 2.25rem;
    max-width: 40ch;
    opacity: 0.8;
  }

  .social-media {
    margin-top: 2rem;
  }

  .social-text {
    font-size: 1.125rem;
    line-height: 1.75rem;
    opacity: 0.8;
  }

  .social-link-wrapper {
    margin-top: 1rem;
    display: flex;
    gap: 1rem;
  }

  .social-link {
    text-decoration: none;
    padding: 1rem;
    border-radius: 9999px;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.25s ease-in-out, box-shadow 0.25s ease-in-out;
    outline: none;
  }

  .social-link:hover,
  .social-link:focus {
    transform: translateY(-0.125rem);
  }

  .social-link:active {
    filter: brightness(0.95);
  }

  .github {
    background-color: var(--color-github-20);
    color: var(--color-github);
  }

  .github:hover,
  .github:focus {
    box-shadow: 0 0 0 0.125rem var(--color-slate-50),
      0 0 0 0.25rem var(--color-github-20);
  }

  .linkedin {
    background-color: var(--color-linkedin-20);
    color: var(--color-linkedin);
  }

  .linkedin:hover,
  .linkedin:focus {
    box-shadow: 0 0 0 0.125rem var(--color-slate-50),
      0 0 0 0.25rem var(--color-linkedin-20);
  }

  .twitter {
    background-color: var(--color-twitter-20);
    color: var(--color-twitter);
  }

  .twitter:hover,
  .twitter:focus {
    box-shadow: 0 0 0 0.125rem var(--color-slate-50),
      0 0 0 0.25rem var(--color-twitter-20);
  }

  .about-me {
    border-top: 1px solid var(--color-slate-200);
    margin-left: auto;
    margin-right: auto;
    max-width: var(--screen-lg);
    padding-left: 4rem;
    padding-right: 4rem;
    padding-top: 4rem;
  }

  .social-image {
    width: 1.063rem;
    height: 1.063rem;
  }
</style>

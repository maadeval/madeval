---
import HeadingPresentation from '~components/pages/homepage/HeadingPresentation/HeadingPresentation.astro'
import PostsSection from '~components/pages/homepage/PostsSection/PostsSection.astro'
import MainLayout from '~layouts/MainLayout.astro'
import { MdxHeader } from '~types/mdx.types'

const posts = await Astro.glob<MdxHeader>('./posts/*.mdx')
---

<MainLayout>
  <HeadingPresentation />
  <PostsSection posts={posts} />
</MainLayout>

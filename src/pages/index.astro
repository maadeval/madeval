---
import Header from '~components/Header/Header.astro'
import Layout from '~layouts/Layout.astro'
---

<Layout>
  <Header />
  <section class="main">
    <div class="background"></div>
    <article class="intro">
      <img class="picture" src="avatar.png" />
      <div class="intro-description">
        <h3 class="technologies">
          Frontend Developer - JavaScript - React - Next.js - HTML & CSS
        </h3>
        <p class="description">
          Ser el sucesor de quien todo aprendí, y enseñar a quien una vez fui.
        </p>
        <article class="social-contact-box">
          <a
            class="contact-link github"
            href="https://github.com/maadeval"
            target="_blank"
          >
            <img src="github-icon.svg" />
            GitHub
          </a>
          <a
            class="contact-link twitter"
            href="https://twitter.com/maadeval"
            target="_blank"
          >
            <img src="twitter-icon.svg" />
            Twitter
          </a>
          <a
            class="contact-link linkedin"
            href="https://www.linkedin.com/in/maadeval/"
            target="_blank"
          >
            <img src="linkedin-icon.svg" />
            LinkedIn
          </a>
        </article>
      </div>
    </article>
    <article class="about-me">
      <h3>Sobre mi</h3>
    </article>
  </section>

  <style>
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-image: linear-gradient(to top, #e6e9f0 0%, #fff 100%);
      z-index: -1;
    }

    .main {
      padding-top: 12rem;
    }

    .picture {
      max-width: 320px;
      aspect-ratio: 1;
      border-radius: 50%;
      filter: drop-shadow(-0.5rem -0.5rem 0 gray);
    }

    .intro {
      display: flex;
      align-items: center;
      gap: 8rem;
    }

    .intro-description {
      margin-top: 5rem;
    }

    .technologies {
      color: gray;
      margin-bottom: 1rem;
    }

    .description {
      font-size: 3rem;
    }

    .social-contact-box {
      margin-top: 3rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .contact-link {
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      background-color: #fff;
      text-decoration: none;
      color: #fff;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out;
      --shadow: #fff;
      box-shadow: 0 0 1rem 0.5rem var(--shadow);
    }

    .contact-link:hover {
      transform: translateY(-0.125rem);
      box-shadow: 0 0.5rem 0.85rem 0.25rem var(--shadow);
    }

    .linkedin {
      background: linear-gradient(90deg, #1896da 0%, #0077b5 100%);
      --shadow: #0077b520;
    }

    .twitter {
      background: linear-gradient(90deg, #1da1f2 0%, #1a91da 100%);
      --shadow: #1a91da20;
    }

    .github {
      background: linear-gradient(90deg, #333 0%, #000 100%);
      --shadow: #00000020;
    }

    .about-me {
      margin-top: 12rem;
    }
  </style>
</Layout>

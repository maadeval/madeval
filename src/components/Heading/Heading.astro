---
import { HTMLAttributes } from 'astro/types'
import style from './Heading.module.css'

type AsElement = 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
type Props = {
  as?: AsElement
} & HTMLAttributes<AsElement>

const { as: As = 'h1', class: className, ...props } = Astro.props
---

<As class={`${style.heading} ${className ?? ''}`} {...props}><slot /></As>

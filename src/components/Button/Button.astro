---
import { HTMLAttributes } from 'astro/types'
import style from './Button.module.css'

type Props<C extends 'button' | 'a'> = {
  as?: C
  className?: string
} & HTMLAttributes<C>

const { as: As = 'button', className, ...attrs } = Astro.props
---

<As class={`${style.button} ${className}`} {...attrs}><slot /></As>

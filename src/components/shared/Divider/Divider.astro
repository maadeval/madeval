---
import style from './Divider.module.css'

interface Props {
  width?: HTMLDivElement['style']['width']
  widthLine?: HTMLDivElement['style']['width']
  height?: HTMLDivElement['style']['height']
  className?: HTMLDivElement['className']
}
const {
  className,
  width = '100%',
  height = '1px',
  widthLine = '1rem',
} = Astro.props
---

<div
  style={`--width: ${width}; --height: ${height}; --widthLine: ${widthLine}`}
  class={`${style.divider} ${className ?? ''}`}
>
</div>
